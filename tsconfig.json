{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
